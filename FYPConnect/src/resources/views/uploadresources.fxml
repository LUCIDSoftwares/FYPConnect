<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.UploadResourcesController">
    <!-- Title Label -->
    <Label layoutX="220.0" layoutY="20.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Upload Resources" />

    <!-- Resource Title -->
    <Label layoutX="28.0" layoutY="74.0" text="Resource Title:" />
    <TextField fx:id="titleField" layoutX="120.0" layoutY="70.0" prefHeight="26.0" prefWidth="423.0" promptText="Enter resource title" />

    <!-- Resource Description -->
    <Label layoutX="28.0" layoutY="120.0" text="Description:" />
    <TextArea fx:id="descriptionField" layoutX="120.0" layoutY="120.0" prefHeight="100.0" prefWidth="423.0" promptText="Enter resource description" />

    <!-- File Path -->
    <Label layoutX="28.0" layoutY="244.0" text="Uploaded File: " />
    <TextField fx:id="filePathField" editable="false" layoutX="120.0" layoutY="240.0" prefHeight="26.0" prefWidth="423.0" promptText="Enter or browse file path" />

    <!-- Submit Button -->
    <Button layoutX="250.0" layoutY="352.0" onAction="#handleSubmit" prefWidth="100.0" style="-fx-background-color: #007bff; -fx-text-fill: white;" text="Submit" />
   <Button fx:id="uploadFileButton" layoutX="443.0" layoutY="276.0" onAction="#uploadFile" prefWidth="100.0" style="-fx-background-color: #007bff; -fx-text-fill: white;" text="Upload File" />
</AnchorPane>
