<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="620.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.UploadProjectsController">
    <!-- Title Label -->
    <Label layoutX="320.0" layoutY="50.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Upload Project" />

    <!-- Project Title Text Field -->
    <TextField fx:id="titleField" editable="true" layoutX="200.0" layoutY="100.0" prefWidth="400.0" promptText="Project Title" />

    <!-- Project Description Text Area -->
    <TextArea fx:id="descriptionField" editable="true" layoutX="100.0" layoutY="146.0" prefHeight="150.0" prefWidth="600.0" promptText="Project Description" />

    <!-- Document Link Text Field -->
    <TextField fx:id="docLinkField" editable="false" layoutX="100.0" layoutY="310.0" prefHeight="26.0" prefWidth="600.0" promptText="Document Link" />

    <!-- Submit Button -->
    <Button layoutX="346.0" layoutY="430.0" onAction="#handleSubmit" prefWidth="100.0" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Submit" />
   <Button fx:id="uploadFileButton" layoutX="536.0" layoutY="357.0" onAction="#uploadFile" prefHeight="26.0" prefWidth="164.0" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Upload Project Document" />
</AnchorPane>
